<!-- Custom scroll sound -->
	<include>./_inc/views/ScrollSound.xml</include>
<!-- Support 4:3 ratio -->
  	<include if="${screen.ratio} == '4/3'" tinyScreen="false">./_inc/views/4 3.xml</include>
