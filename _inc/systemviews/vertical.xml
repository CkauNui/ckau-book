<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
	<view name="system">
		<carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0.0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>00000000</color>
			<logoScale>1.6</logoScale>
			<logoSize>0.125 0.125</logoSize>
			<logoRotation>-6.5</logoRotation>
			<logoRotationOrigin>4.0 0.3</logoRotationOrigin>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>7</maxLogoCount>
			<systemInfoDelay>0.1</systemInfoDelay>
			<zIndex>75</zIndex>
			
			<!-- 4:3 -->
			<logoScale if="${screen.ratio} == '4/3'">1.8</logoScale>
		</carousel>
	</view>
</theme>