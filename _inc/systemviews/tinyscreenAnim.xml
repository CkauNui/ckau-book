<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
			<include>./../../_inc/layouts/${system.theme}.xml</include>

	<view name="menu">
		<menuText name="menutext" extra="true">
			<fontSize>0.0415</fontSize>
			<color>969696</color>
			<separatorColor>363636FF</separatorColor>
			<selectorColor>${baseColor}</selectorColor>
			<selectorColorEnd>${gradientEndColor}</selectorColorEnd>
			<selectedColor>FFFFFF</selectedColor>
			<selectorGradientType>horizontal</selectorGradientType>
		</menuText>
		<menuTextSmall name="menutextsmall" extra="true">
			<fontSize>0.03</fontSize>
			<color>deec00</color>
		</menuTextSmall>
	</view>
<!-- Clock, gamepad icons, battery indicator -->
	<view name="screen">
		<text name="clock">
			<fontSize>0.035</fontSize>
		</text>
		<batteryIndicator name="batteryIndicator">
			<size>0.043 0.0375</size>
		</batteryIndicator>
	</view>
	<view name="system">
		<text name="TextDate" extra="true">
			<pos>0.49 0.16</pos>
			<fontSize>0.035</fontSize>
		</text>
		<text name="TextManufacturer" extra="true">
			<pos>0.49 0.225</pos>
			<fontSize>0.04</fontSize>
		</text>
		<text name="TextName" extra="true">
			<fontSize>0.05</fontSize>
		</text>
		<text name="TextDesc" extra="true">
			<size>0.5 0.45</size>
			<fontSize>0.035</fontSize>
			<pos>0.49 0.45</pos>
			<autoScroll>vertical</autoScroll>
			<verticalAlignment>top</verticalAlignment>
		</text>
		<text name="systemInfo" extra="true">
			<size>0.19 0.058</size>
			<pos>0.49 0.05</pos>
			<fontSize>0.035</fontSize>
			<alignment>left</alignment>
			<origin>0 0</origin>
			<storyboard>
				<animation property="opacity" to="0" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="4000" duration="1000" mode="EaseIn"/>
			</storyboard>
		</text>
	</view>
</theme>
