<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<include>./../../_inc/systemviews/animate.xml</include>
	<view name="system">
		<!-- Descriptions background -->
		<image name="background" extra="true">
			<opacity>0.9</opacity>
		</image>
		<image name="sysbg-right" extra="true">
			<origin>0.5 0.5</origin>
			<pos>1 0.5</pos>
			<minSize>0.38 1.1</minSize>
			<minSize if="${screen.ratio} == '4/3'">0.38 1.1</minSize>
			<minSize if="${screen.ratio} == '21/9'">0.52 1.1</minSize>
			<color>${sysColor}</color>
			<path>./../../_inc/images/space.png</path>
			<storyboard>
				<animation property="pos" to="0.85 0.5" begin="2000" duration="1000" mode="linear"/>
			</storyboard>
		</image>		
	</view>
</theme>