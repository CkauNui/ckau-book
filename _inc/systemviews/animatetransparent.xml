<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<include>./../../_inc/systemviews/animate.xml</include>
	<view name="system">
		<!-- Descriptions background -->
		<image name="background" extra="true">
			<opacity>0.9</opacity>
		</image>
		<!-- Dynamically colored system background. Needed to allow background image extension -->
		<image name="sysbg-right" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.85 0.5</pos>
			<pos if="${screen.ratio} == '21/9'">0.99 0.5</pos>		
			<pos if="${screen.ratio} == '21/9'">0.9 0.5</pos>
			<minSize>0.3 1.1</minSize>
			<minSize if="${screen.ratio} == '21/9'">0.52 1.1</minSize>
			<color>${sysColor}</color>
			<path>./../../_inc/images/space.png</path>
			<storyboard if="${screen.ratio} == '21/9'">
				<animation property="pos" to="0.8 0.5" begin="2000" duration="1000" mode="linear"/>
			</storyboard>
		</image>
	</view>
</theme>