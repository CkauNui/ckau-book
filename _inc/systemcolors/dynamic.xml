<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="basic">
		<image name="background" extra="true">
			<color>${sysbgColor}</color>
		</image>
	</view>
	<view name="detailed">
		<image name="background" extra="true">
			<color>${sysbgColor}</color>
		</image>
	</view>
	<view name="grid">
		<image name="background" extra="true">
			<color>${sysbgColor}</color>
		</image>
		<image name="gamelistBackground" extra="true">
			<color>${sysbgColor}</color>
		</image>
	</view>
	<customView name="Grid + Fanart, Wallpapers, Carousel + Fanart">
		<image name="md_fanart">
			<!-- <color>707070</color>  Set if no use background color-->
			<color>FFFFFF5F</color>
		</image>
		<image name="background" extra="true">
			<color>141414</color>
		</image>
	</customView>
	<customView name="Logo + Details">
		<image name="md_fanart">
			<visible>false</visible>
		</image>
	</customView>
	<customView name="Vertically50">
		<image name="background" extra="true">
			<color>141414</color>
		</image>
	</customView>

	<view name="grid">
		<imagegrid name="gamegrid">
			<scrollbarColor>${textDateColor}</scrollbarColor>
		</imagegrid>
		<ninepatch name="gridtile.background:selected">
			<animateColor>${sysbgColor}</animateColor>
		</ninepatch>
	</view>
</theme>