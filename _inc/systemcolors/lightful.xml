<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<include>./colorful.xml</include>
<!-- Variables for Dynamic bg -->
	<variables>
		<!-- Sets variables for Colorful variants -->
		<sysbgColor>DDDDDD</sysbgColor>
	</variables>

	<view name="system, menu">
		<image name="sysbg" extra="true">
			<color>DDDDDD</color>
		</image>
		<image name="sysbg-fix" extra="true">
			<color>DDDDDD</color>
		</image>
		<image name="sysbg-left" extra="true">
			<color>DDDDDD</color>
		</image>
		<image name="sysbg-right" extra="true">
			<color>DDDDDD</color>
		</image>
		<image name="sysbg-down" extra="true">
			<color>DDDDDD</color>
		</image>

<!-- System info desc -->
		<text name="TextDate" extra="true">
			<color>00000080</color>
		</text>
		<text name="TextManufacturer" extra="true">
			<color>000000</color>
		</text>
		<text name="TextName" extra="true">
			<color>000000</color>
		</text>
		<text name="TextDesc" extra="true">
			<color>000000</color>
		</text>

<!-- Color help buttons, games count, clock -->
		<helpsystem name="help">
			<textColor>00000080</textColor>
			<iconColor>00000080</iconColor>
		</helpsystem>
		<text name="systemInfo" extra="static">
			<color>00000080</color>
		</text>
<!-- Helpsystem bottom bar bg -->
		<image name="BottomBar" extra="static">
			<color>DDDDDDB9</color>
		</image>
	</view>

<!-- Color clock -->
	<view name="screen">
		<text name="clock">
			<color>FFFFFF</color>
		</text>
	</view>
</theme>