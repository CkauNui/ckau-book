<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="system">
		<image name="sysart" extra="true">
			<path>./../../_inc/anim/fpinball.png</path>
			<path>./../../../ckau-book-addons/_inc/anim/4K/fpinball.png</path>
		</image>
		<image name="sysbg-video" extra="true">
			<color>000000</color>
			<path>./../../_inc/images/space43.png</path>
			<zIndex>2</zIndex>
			<origin>0.5 0.5</origin>
			<origin if="${screen.ratio} == '4/3'">0.5 0.395</origin>
			<origin if="${screen.ratio} == '16/10'">0.5 0.455</origin>
			<pos>0.501 0.405</pos>
			<maxSize>0.245</maxSize>
			<storyboard>
				<animation property="pos" to="0.221 0.405" begin="2000" duration="1000" mode="linear"/>
			</storyboard>
		</image>
		<video name="videobox" extra="true">
			<path>{random}</path>
			<path>./../../_inc/anim/video/fpinball.mp4</path>
			<path>./../../_inc/anim/video/${synonym}.mp4</path>
			<!-- Loads platform video from addon directory, if available -->
			<path>./../../../ckau-book-addons/_inc/anim/video/fpinball.mp4</path>
			<path>./../../../ckau-book-addons/_inc/anim/video/${synonym}.mp4</path>
			<delay>0</delay>
			<effect>none</effect>
			<origin>0.5 0.5</origin>
			<origin if="${screen.ratio} == '4/3'">0.5 0.395</origin>
			<origin if="${screen.ratio} == '16/10'">0.5 0.455</origin>
			<pos>0.501 0.408</pos>
			<maxSize>0.23</maxSize>
			<zIndex>26</zIndex>
			<storyboard>
				<animation property="pos" to="0.221 0.408" begin="2000" duration="1000" mode="linear"/>
			</storyboard>
		</video>
		<text name="TextDate" extra="true">
			<text/>
		</text>
		<text name="TextManufacturer" extra="true">
			<text>Collection</text>
			<text lang="pl">Kolekcja</text>
			<text lang="ru">Коллекция</text>
			<text lang="es">Recopilación</text>
			<text lang="fr">Collection</text>
			<text lang="it">Collezione</text>
			<text lang="pt">Coleção</text>
		</text>
		<text name="TextName" extra="true">
			<text>Pinball</text>
		</text>
