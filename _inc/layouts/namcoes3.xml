			<minSize>0.1 0.3</minSize>
			<rotation>14</rotation>
			<path>./../../_inc/images/space.png</path>
			<zIndex>27</zIndex>
			<storyboard>
				<animation property="pos" to="0.025 0.45" begin="2000" duration="1000" mode="linear"/>
