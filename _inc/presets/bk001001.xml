<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="Grid + Fanart">
	<formatVersion>7</formatVersion>
	<customView name="Grid + Fanart">
		<image name="fanart">
		<color>FFFFFFFF</color>
			<storyboard event="activate" repeat="forever">
			</storyboard>
			<storyboard event="deactivate">
			</storyboard>
		</image>
		<video name="md_video">
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="0" duration="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="300" duration="300" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="0" duration="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="300" duration="300" mode="linear"/>
			</storyboard>
		</video>
		<image name="md_marquee">
			<pos>0.185 0.172</pos>
		</image>
		<text name="md_name" extra="true">
			<visible>false</visible>
		</text>
	</customView>
	<view name="grid">
		<imagegrid name="gamegrid">
			<autoLayout>6 2</autoLayout>
			<autoLayout if="${screen.ratio} == '21/9'">8 2</autoLayout>
		</imagegrid>
	</view>
</theme>