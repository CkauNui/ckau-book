<?xml version="1.0" encoding="UTF-8"?>

<theme>
	<formatVersion>7</formatVersion>

	<customView name="WallpapersHeroes">
		<image name="md_cartridge">
			<tile>true</tile>
			<origin>0 1</origin>
			<pos>0.182 0.925</pos>
			<maxSize>0.215 0.30</maxSize>
			<zIndex>70</zIndex>
			<linearSmooth>true</linearSmooth>
			<storyboard event="open">
				<animation property="opacity" from="1" to="0" begin="0" duration="0" mode="EaseOutQuint"/>
				<animation property="opacity" from="0" to="1" begin="2000" duration="500" mode="EaseOutQuint"/>
				<animation property="offsetX" from="-0.04" to="0" begin="2000" duration="2500" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activate">
				<animation property="opacity" from="1" to="0" begin="0" duration="0" mode="EaseOutQuint"/>
				<animation property="opacity" from="0" to="1" begin="2000" duration="500" mode="EaseOutQuint"/>
				<animation property="offsetX" from="-0.04" to="0" begin="2000" duration="2500" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="opacity" from="1" to="0" duration="" mode="Linear"/>
			</storyboard>
		</image>
		<image name="md_thumbnail">
			<zIndex>71</zIndex>
			<linearSmooth>true</linearSmooth>
			<storyboard event="open">
				<animation property="offsetX" to="-0.04" to="0" begin="2000" duration="2500" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activate">
				<animation property="offsetX" to="-0.04" to="0" begin="2000" duration="2500" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="opacity" to="0" duration="" mode="Linear"/>
			</storyboard>
		</image>
		<text name="md_name" extra="true">
			<color>FFFFFFFF</color>
		</text>
	</customView>
</theme>