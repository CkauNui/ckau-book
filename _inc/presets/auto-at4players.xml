<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
	<view name="gamecarousel">
		<text name="md_name" extra="true">
			<visible>false</visible>
		</text>
		<text name="game_name" extra="true">
			<pos>0.35 0.015</pos>
			<color>80808060</color>
			<extraTextColor>80808040</extraTextColor>
			<alignment>center</alignment>
			<size>1 0.03</size>
			<origin>0.5 0.5</origin>
			<text>{game:name} [{game:system}]</text>
			<fontPath>${fontNameBold}</fontPath>
			<fontSize>0.024</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>140</zIndex>
		</text>
	</view>
	<view name="grid">
		<text name="md_name" extra="true">
			<visible>false</visible>
		</text>
		<text name="game_name" extra="true">
			<pos>0.5 0.015</pos>
			<alignment>center</alignment>
			<size>1 0.03</size>
			<origin>0.5 0.5</origin>
			<text>{game:name} [{game:system}]</text>
			<fontPath>${fontNameBold}</fontPath>
			<fontSize>0.024</fontSize>
			<extraTextColor>FFFFFF50</extraTextColor>
			<color>FFFFFF80</color>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>140</zIndex>
			<visible>true</visible> <!-- Need for 2p/4p and others presets -->
		</text>
	</view>

	<customView name="Grid + Details, Logo + Details, Carousel + Details">
		<text name="md_name" extra="true">
			<visible>false</visible>
		</text>
		<text name="game_name" extra="true">
			<pos>0.83 0.158</pos>
			<size>0.30 0.1</size>
			<color>F0F0F0</color>
			<fontSize>0.032</fontSize>
			<verticalAlignment>bottom</verticalAlignment>
			<horizontalAlignment>center</horizontalAlignment>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
			<visible>true</visible>
		</text>
	</customView>

	<customView name="Modern Grid">
		<text name="game_name" extra="true">
			<visible>false</visible>
		</text>
		<text name="game-name" extra="true">
			<text>{game:name} [{game:system}]</text>
		</text>
	</customView>

	<customView name="WallpapersCarousel, WallpapersHeroes, VideoFull">
		<text name="game_name" extra="true">
			<pos>0.472 0.015</pos>
			<extraTextColor>FFFFFF50</extraTextColor>
			<color>FFFFFF80</color>
			<visible>true</visible>
		</text>
	</customView>

	<customView name="Carousel">
		<text name="game_name" extra="true">
			<pos>0.5 0.82</pos>
			<fontSize>0.026</fontSize>
			<color>FFFFFFFF</color>
			<glowColor>00000016</glowColor>
			<glowSize>4</glowSize>
			<visible>true</visible>
		</text>
	</customView>

	<customView name="Colorful (vertically)">
		<text name="game_name" extra="true">
			<pos>0.82 0.35</pos>
			<size>0.35 0.2</size>
			<alignment>left</alignment>
			<color>FFFFFF</color>
			<fontSize>0.05</fontSize>
			<visible>true</visible>
		</text>
	</customView>

	<customView name="Colorful (horizontally)">
		<text name="game_name" extra="true">
			<pos>0.648 0.6</pos>
			<size>0.695 0.1</size>
			<alignment>left</alignment>
			<color>FFFFFF</color>
			<fontSize>0.046</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<visible>true</visible>
		</text>
	</customView>
