<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="Grid + Fanart">
	<formatVersion>7</formatVersion>

	<customView name="Grid + Fanart">
		<imagegrid name="gamegrid">
			<pos>0 0.405</pos>
			<autoLayout>4 2</autoLayout>
			<margin>0.005 0.010</margin>
			<padding>0.03 0.03 0.03 0.3</padding>
			<size>1 0.8</size>
			<autoLayoutSelectedZoom>1.25</autoLayoutSelectedZoom>
			<centerSelection>true</centerSelection>
		</imagegrid>
		<gridtile name="default">
			<size>0.225 0.254</size>
			<padding>3 3</padding>
			<imageSizeMode>minSize</imageSizeMode>
			<imageColor>A0A0A0FF</imageColor>
		</gridtile>
		<text name="gridtile_selected">
			<singleLineScroll>false</singleLineScroll>
			<color>FFFFFF</color>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
		</text>
		<text name="md_description">
			<visible>false</visible>
		</text>
		<video name="md_video">
			<pos>0.785 0.403</pos>
			<!-- <size>0.35</size> -->
			<maxSize>0.35</maxSize>
			<origin>0.5 1</origin>
			<delay>0.2</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<snapshotSource>image</snapshotSource>
			<effect>none</effect>
			<zIndex>100</zIndex>
			<scaleOrigin>1</scaleOrigin>
		</video>
	</customView>
</theme>