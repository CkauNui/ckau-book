<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Сетка -->
	<view name="grid">
		<text name="logoText">
			<pos>0.5 0.142</pos>
			<origin>0.5 0</origin>
			<size>0.15625 0.055</size>
			<fontSize>0.044</fontSize>
			<fontPath>${fontNameBold}</fontPath>
			<color>${baseColor}</color>
			<forceUppercase>true</forceUppercase>
		</text>
		<text name="md_name" extra="true">
			<pos>0 0</pos>
			<size>1 0.03</size>
			<alignment>center</alignment>
			<fontPath>${fontNameBold}</fontPath>
			<color>FFFFFF1F</color>
			<fontSize>0.024</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>140</zIndex>
			<visible>false</visible> <!-- Need for 2p/4p and others presets -->
		</text>
		<text name="game_name" extra="true">
			<pos>0.472 0.015</pos>
			<alignment>center</alignment>
			<size>1 0.03</size>
			<origin>0.5 0.5</origin>
			<text>{game:name} [{game:system}]</text>
			<fontPath>${fontNameBold}</fontPath>
			<fontSize>0.024</fontSize>
			<extraTextColor>FFFFFF50</extraTextColor>
			<color>FFFFFF80</color>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>140</zIndex>
			<visible>false</visible> <!-- Need for 2p/4p and others presets -->
		</text>
		<image name="background" extra="true">
			<tile>true</tile>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<path>./../../_inc/images/space.png</path>
			<color>141414</color>
		</image>
		<image name="logo">
			<pos>0.5 0.09</pos>
			<maxSize>0.240 0.126</maxSize>
			<origin>0.5 0.5</origin>
			<zIndex>150</zIndex>
		</image>
		<imagegrid name="gamegrid">
			<pos>0.016 0.16</pos>
			<size>0.95 0.79</size>
			<margin>0.005 0.010</margin>
			<padding>0.03 0.04 0.03 0.1</padding>
			<autoLayout>7 2</autoLayout>
			<autoLayout if="${screen.ratio} == '21/9'">9 2</autoLayout>
			<autoLayoutSelectedZoom>1.12</autoLayoutSelectedZoom>
			<centerSelection>false</centerSelection>
			<animateSelection>false</animateSelection>
			<scrollSound>./../../_inc/sound/scroll.wav</scrollSound>
			<scrollbarColor>333333FF</scrollbarColor>
			<scrollbarCorner>0.49</scrollbarCorner>
			<scrollbarSize>0.005</scrollbarSize>
			<zIndex>50</zIndex>
		</imagegrid>
		<gridtile name="default">
			<backgroundCenterColor>FFFFFF00</backgroundCenterColor>
			<backgroundColor>FFFFFF00</backgroundColor>
			<backgroundCornerSize>9 9</backgroundCornerSize>
			<imageSizeMode>maxSize</imageSizeMode>
			<selectionMode>image</selectionMode>
			<padding>5 5</padding>
			<imageColor>FFFFFFAA</imageColor>
		</gridtile>
		<gridtile name="selected">
			<backgroundCenterColor>${centerFadeColor}</backgroundCenterColor>
			<backgroundEdgeColor>${bottomBarColor}</backgroundEdgeColor>
			<imageColor>FFFFFFFF</imageColor>
		</gridtile>
		<text name="gridtile">
			<color>D0D0D0</color>
			<backgroundColor>00000000</backgroundColor>
			<fontSize>0.022</fontSize>
			<alignment>center</alignment>
			<size>1 0.24</size>
		</text>
		<text name="gridtile_selected">
			<color>FFFFFF</color>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
		</text>
		<image name="gridtile.favorite">
			<path>./../../_inc/images/favorite.png</path>
			<pos>0.95 0.05</pos>
			<maxSize>0.10 0.10</maxSize>
			<origin>0.5 0.5</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<color>FFFF00B0</color>
		</image>
		<image name="gridtile.favorite:selected">
			<color>FFFFFF</color>
		</image>
		<ninepatch name="gridtile.background:selected">
			<path>./../../_inc/images/framewselsq.png</path>
			<cornerSize>36 36</cornerSize>
			<padding>-18 -18</padding>
			<color>${baseColor}</color>
			<animateColor>141414</animateColor>
			<animateColorTime>650</animateColorTime>
		</ninepatch>
		<datetime name="md_releasedate">
			<origin>0.5 1</origin>
			<pos>0.98 0.76</pos>
			<size>0.1 0.0222</size>
			<rotation>-90</rotation>
			<alignment>left</alignment>
			<format>%Y</format>
			<glowSize>3</glowSize>
			<fontPath>${fontDescReg}</fontPath>
			<fontSize>0.022</fontSize>
			<color>666666</color>
			<zIndex>180</zIndex>
		</datetime>
		<image name="md_flag">
			<origin>0.5 0</origin>
			<pos>0.98 0.88</pos>
			<maxSize>0.02 0.05</maxSize>
			<color>FFFFFF90</color>
			<zIndex>180</zIndex>
		</image>
		<rating name="md_rating">
			<pos>0.98 0.21</pos>
			<size>0.05 0.03</size>
			<rotation>-90</rotation> 
			<color>666666</color>
			<origin>0.5 0</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<unfilledColor>80808040</unfilledColor>
			<unfilledPath>./../../_inc/images/star_filled.svg</unfilledPath>
			<zIndex>160</zIndex>
		</rating>
		<text name="md_players">
			<pos>0.98 0.37</pos>
			<size>0.03 0.03</size>
			<origin>0.5 0.5</origin>
			<fontPath>${fontPlayers}</fontPath>
			<text>1</text>
			<alignment>center</alignment>
			<fontSize>0.034</fontSize>
			<color>666666</color>
			<zIndex>160</zIndex>
		</text>
		<image name="md_manual,md_nomanual">
			<pos>0.98 0.42</pos>
			<path>./../../_inc/images/book.png</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>160</zIndex>
		</image>
		<image name="md_nomanual">
			<color>80808040</color>
		</image>
		<image name="md_cheevos,md_notcheevos">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/Contest.png</path>
			<pos>0.98 0.47</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>666666</color>
			<zIndex>160</zIndex>
		</image>
		<image name="fake_cheevos" extra="true">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/Contest.png</path>
			<pos>0.98 0.47</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>80808040</color>
			<zIndex>90</zIndex>
		</image>
		<image name="md_notcheevos">
			<color>80808040</color>
		</image>
		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/SaveState.png</path>
			<pos>0.98 0.52</pos>
			<y ifCheevos="false">0.52</y>
			<maxSize>0.02 0.03</maxSize>
			<color>666666</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_nosavestate">
			<color>80808040</color>
		</image>
		<image name="md_hidden">
			<pos>0.98 0.92</pos>
			<path>./../../_inc/images/hidden.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>160</zIndex>
		</image>
		<image name="md_kidgame,md_notkidgame">
			<pos>0.98 0.57</pos>
			<path>./../../_inc/images/kid.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>160</zIndex>
		</image>
		<image name="md_notkidgame"> 
			<color>80808000</color>
		</image>
	</view>
</theme>