<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Сетка -->
	<view name="grid">
		<text name="logoText">
			<pos>.5 0.1427777777777778</pos>
			<origin>0.5 0</origin>
			<size>0.15625 0.0555555555555556</size>
			<fontSize>0.0444444444444444</fontSize>
			<fontPath>./../../_inc/fonts/RobotoCondensed-Light.ttf</fontPath>
			<color>${baseColor}</color>
			<forceUppercase>true</forceUppercase>
		</text>
		<text name="md_name" extra="true">
			<pos>0.005 0.005</pos>
			<alignment>left</alignment>
			<fontPath>./../../_inc/fonts/RobotoCondensed-Light.ttf</fontPath>
			<color>${textDateColor}</color>
			<fontSize>0.02</fontSize>
			<zIndex>140</zIndex>
			<visible>false</visible>
		</text>
		<image name="background" extra="true">
			<tile>true</tile>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<path>./../../_inc/images/space.png</path>
			<color>${sysbgColor}</color>
			<color ifSubset="gamelistbgcolor:Default">141414</color>
		</image>
		<image name="logo,logo1">
			<pos>.5 0.09</pos>
			<maxSize>0.260 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		<imagegrid name="gamegrid">
			<pos>0 0.2</pos>
			<size>0.950 0.75</size>
			<margin>0.005 0.010</margin>
			<padding>0.03 0.04 0.03 0.1</padding>
			<autoLayout>7 2</autoLayout>
			<autoLayout if="${screen.ratio} == '21/9'">9 2</autoLayout>
			<autoLayoutSelectedZoom>1.06</autoLayoutSelectedZoom>
			<centerSelection>false</centerSelection>
			<animateSelection>false</animateSelection>
			<scrollSound>./../../_inc/sound/scroll.wav</scrollSound>
			<scrollbarColor>${TextDateColor}</scrollbarColor>
			<scrollbarCorner>0</scrollbarCorner>
			<scrollbarSize>0.002</scrollbarSize>
		</imagegrid>
		<gridtile name="default">
			<backgroundColor>FFFFFF00</backgroundColor>
			<backgroundCornerSize>9 9</backgroundCornerSize>
			<selectionMode>image</selectionMode>
			<padding>5 5</padding>
			<imageColor>FFFFFFB0</imageColor>
		</gridtile>
		<gridtile name="selected">
			<backgroundCenterColor>${centerFadeColor}</backgroundCenterColor>
			<backgroundEdgeColor>${bottomBarColor}</backgroundEdgeColor>
			<imageColor>FFFFFFFF</imageColor>
		</gridtile>
		<text name="gridtile">
			<color>${textDateColor}</color>
			<backgroundColor>00000000</backgroundColor>
			<fontSize>0.022</fontSize>
			<alignment>center</alignment>
			<size>1 0.24</size>
		</text>
		<text name="gridtile_selected">
			<color>FFFFFF</color>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
		</text>
		<image name="gridtile.favorite">
			<path>./../../_inc/images/favorite.png</path>
			<pos>0.95 0.05</pos>
			<maxSize>0.10 0.10</maxSize>
			<origin>0.5 0.5</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<color>FFFF00B0</color>
		</image>
		<image name="gridtile.favorite:selected">
			<color>ffffff</color>
		</image>
		<ninepatch name="gridtile.background:selected">
			<path>./../../_inc/images/framewselsq.png</path>
			<cornerSize>36 36</cornerSize>
			<padding>-18 -18</padding>
			<color>${baseColor}</color>
			<animateColor>ffffff</animateColor>
			<animateColorTime>650</animateColorTime>
		</ninepatch>
		<datetime name="md_releasedate">
			<origin>0.5 1</origin>
			<pos>0.98 0.75</pos>
			<size>0.1 0.0222222222222222</size>
			<rotation>-90</rotation>
			<alignment>left</alignment>
			<format>%Y</format>
			<fontPath>./../../_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<color>${textDateColor}</color>
			<zIndex>180</zIndex>
		</datetime>
		<image name="md_flag">
			<origin>0.5 0</origin>
			<pos>0.98 0.88</pos>
			<maxSize>0.02 0.05</maxSize>
		</image>
		<rating name="md_rating">
			<pos>0.98 0.21</pos>
			<size>0.05 0.03</size>
			<rotation>-90</rotation> 
			<color>${textDateColor}</color>
			<origin>0.5 0</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<unfilledColor>${unfilledColor}</unfilledColor>
			<unfilledPath>./../../_inc/images/star_filled.svg</unfilledPath>
		</rating>
		<text name="md_players">
			<pos>0.98 0.37</pos>
			<size>0.03 0.03</size>
			<origin>0.5 0.5</origin>
			<fontPath>./../../_inc/fonts/players.ttf</fontPath>
			<text>1</text>
			<alignment>center</alignment>
			<fontSize>0.034</fontSize>
			<color>${textDateColor}</color>
		</text>
		<image name="md_manual,md_nomanual">
			<pos>0.98 0.42</pos>
			<path>./../../_inc/images/book.png</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textDateColor}</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_nomanual">
			<color>${unfilledColor}</color>
		</image>
		<image name="md_cheevos,md_notcheevos">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/Contest.png</path>
			<pos>0.98 0.47</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>${textDateColor}</color>
			<zIndex>100</zIndex>
		</image>
		<image name="md_notcheevos">
			<color>${unfilledColor}</color>
		</image>
		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/SaveState.png</path>
			<pos>0.98 0.52</pos>
			<y ifCheevos="false">0.47</y>
			<maxSize>0.02 0.03</maxSize>
			<color>${textDateColor}</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_nosavestate">
			<color>${textDateColor}</color>
		</image>
		<image name="md_hidden">
			<pos>0.98 0.92</pos>
			<path>./../../_inc/images/hidden.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textDateColor}</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_kidgame,md_notkidgame">
			<pos>0.98 0.57</pos>
			<path>./../../_inc/images/kid.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textDateColor}</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_notkidgame"> 
			<color>${unfilledColor}</color>
		</image>
	</view>
</theme>