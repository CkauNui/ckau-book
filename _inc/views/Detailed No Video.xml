<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Подробно без видео -->
	<customView name="Detailed No Video" inherits="detailed" displayName="${NoVideoDetailsViewName}">
		<video name="md_video">
			<pos>1 1</pos>
			<size>0 0</size>
			<zIndex>0</zIndex>
			<visible>false</visible>
		</video>
		<image name="md_image">
			<pos>0.386625 0.675555555555556</pos>
			<maxSize>0.30 0.3833333333333333</maxSize>
			<origin>0 1</origin>
			<zIndex>110</zIndex>
		</image>
		<image name="video-background" extra="true">
			<pos>1 1</pos>
			<size>0 0</size>
			<zIndex>0</zIndex>
			<visible>false</visible>
		</image>
		<image name="video-screen" extra="true">
			<pos>1 1</pos>
			<size>0 0</size>
			<zIndex>0</zIndex>
			<visible>false</visible>
		</image>
	</customView>
<!-- Navigation arrows, if enabled -->
  	<include ifSubset="arrows:On">./../../_inc/views/arrows.xml</include>
</theme>