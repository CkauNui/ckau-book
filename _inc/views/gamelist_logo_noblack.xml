<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
<!-- Animation gamelist logo from Lehcim Cram Trebor -->
<view name="basic,detailed,grid,gamecarousel">

		<image name="gamelistPreloading" extra="true">
			<linearSmooth>true</linearSmooth>
			<tile>false</tile>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>0.6 0.28</maxSize>
			<color>00000000</color>
			<reflexion>0.05 0.2</reflexion>
			<zIndex>9999</zIndex>
			<path>./_inc/logos/${system.theme}.png</path>
			<path>./_inc/logos/${system.theme}.svg</path>
			<path>./_inc/logos/${system.theme}-w.svg</path>
			<path>./_inc/logos/${system.theme}-w-${lang}.png</path>
			<path>./_inc/logos/${system.theme}-w-${lang}.svg</path>
			<path>./_inc/logos/${system.theme}-${lang}.png</path>
			<path>./_inc/logos/${system.theme}-${lang}.svg</path>
		<!-- Regional logos -->
			<path region="us">./_inc/logos/us/${system.theme}.png</path>
			<path region="us">./_inc/logos/us/${system.theme}.svg</path>
			<path region="us">./_inc/logos/us/${system.theme}-w.svg</path>
			<path region="jp">./_inc/logos/jp/${system.theme}.png</path>
			<path region="jp">./_inc/logos/jp/${system.theme}.svg</path>
			<path region="jp">./_inc/logos/jp/${system.theme}-w.svg</path>

			<storyboard>
				<animation property="color" from="00000000" to="ffffff" duration="250" mode="linear"/>
				<animation property="color" from="ffffff" to="ffffff" begin="250" duration="550" mode="easeIn"/>
				<animation property="color" from="ffffff" to="00000000" begin="700" duration="700" mode="easeInQuint"/>
				<animation property="reflexion" to="0 0" begin="700" duration="600" mode="easeInCubic"/>
				<animation property="offsetX" to="1" begin="700" duration="700" mode="easeInQuint"/>
			</storyboard>
		</image>

		<image name="gamelistPreloadingShadow" extra="true">
			<tile>false</tile>
			<origin>0.49 0.46</origin>
			<pos>0.5 0.5</pos>
			<maxSize>0.6 0.28</maxSize>
			<color>00000000</color>
			<zIndex>9998</zIndex>
			<path>./_inc/logos/${system.theme}.png</path>
			<path>./_inc/logos/${system.theme}.svg</path>
			<path>./_inc/logos/${system.theme}-w.svg</path>
			<path>./_inc/logos/${system.theme}-w-${lang}.png</path>
			<path>./_inc/logos/${system.theme}-w-${lang}.svg</path>
			<path>./_inc/logos/${system.theme}-${lang}.png</path>
			<path>./_inc/logos/${system.theme}-${lang}.svg</path>
		<!-- Regional logos -->
			<path region="us">./_inc/logos/us/${system.theme}.png</path>
			<path region="us">./_inc/logos/us/${system.theme}.svg</path>
			<path region="us">./_inc/logos/us/${system.theme}-w.svg</path>
			<path region="jp">./_inc/logos/jp/${system.theme}.png</path>
			<path region="jp">./_inc/logos/jp/${system.theme}.svg</path>
			<path region="jp">./_inc/logos/jp/${system.theme}-w.svg</path>

			<storyboard>
				<animation property="color" from="00000000" to="00000040" duration="250" mode="linear"/>
				<animation property="color" from="00000040" to="00000040" begin="250" duration="550" mode="easeIn"/>
				<animation property="color" from="00000040" to="00000000" begin="700" duration="700" mode="easeInQuint"/>
				<animation property="offsetX" to="-1" begin="700" duration="700" mode="easeInQuint"/>
			</storyboard>
		</image>
</view>
</theme>