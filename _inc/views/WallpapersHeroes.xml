<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Шапка (фанарт) + Карусель -->
	<customView name="WallpapersHeroes" inherits="gamecarousel" displayName="${WallpapersHeroesName}">
		<!-- Disable gamecarousel icons -->
		<container name="container-gamedata" extra="true">
			<visible>false</visible>
		</container>
		<container name="container-gamedata2" extra="true">
			<visible>false</visible>
		</container>
		<stackpanel name="container-gamedata3" extra="true">
			<visible>false</visible>
		</stackpanel>
		<stackpanel name="container-flags" extra="true">
			<visible>false</visible>
		</stackpanel>


		<image name="background" extra="true">
			<color>141414</color>
		</image>
		<image name="gamelist-background" extra="true">
			<visible>false</visible>
			<zIndex>1</zIndex>
		</image>
		<text name="md_name" extra="true">
			<pos>0.472 0.015</pos>
			<color>FFFFFF1F</color>
		</text>
		<image name="art" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<minSize>1 1</minSize>
			<path>${themePath}/_inc/images/overlay3.png</path>
			<zIndex>70</zIndex>
		</image>
		<image name="fanart" extra="true">
			<origin>0.5 0</origin>
			<pos>0.5 0</pos>
			<color>FFFFFF5F</color>
			<maxSize>1 1</maxSize>
			<maxSize if="${screen.ratio} == '4/3'">1.25 1.25</maxSize>
			<maxSize if="${screen.ratio} == '16/10'">1.11 1.11</maxSize>
			<path>{game:fanart}</path>
			<zIndex>60</zIndex>
			<linearSmooth>true</linearSmooth>
			<storyboard event="activate" repeat="forever">
				<animation property="scale" from="1" to="1.1" duration="8000"/>
				<animation property="scale" begin="8000" to="1" duration="8000"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="opacity" to="0" duration="400" mode="easeOut"/>
				<animation property="scale" to="1" duration="250"/>
			</storyboard>
		</image>
		<image name="fanart_fix" extra="true">
			<visible>!exists({game:fanart})</visible>
			<path>${themePath}/_inc/anim/${system.theme}.png</path>
			<pos>0.5 -0.3</pos>
			<origin>0.5 0</origin>
			<maxSize>1 1</maxSize>
			<color>FFFFFF16</color>
			<zIndex>60</zIndex>
		</image>
		<image name="md_fanart">
			<visible>false</visible>
			<zIndex>1</zIndex>
		</image>
		<image name="thumbnail-art" extra="true">
			<pos>0.13 0.938</pos>
			<maxSize>0.25 0.64</maxSize>
			<zIndex>70</zIndex>
		</image>
		<text name="md_description">
			<pos>0.273 0.31</pos>
			<size>0.4 0.23</size>
			<color>FFFFFFFF</color>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
			<zIndex>65</zIndex>
		</text>
		<video name="md_video">
			<pos>0.44 0.932</pos>
			<maxSize>0.36</maxSize>
		</video>
		<image name="logo" extra="true">
			<pos>0.12 0.12</pos>
			<origin>0.5 0.5</origin>
			<opacity>1</opacity>
			<storyboard event="activate">
			</storyboard>
			<storyboard event="scroll">
			</storyboard>
			<storyboard event="deactivate">
			</storyboard>
		</image>
		<!-- Logo anim bzz -->
		<image name="logo1" extra="true">
			<pos>0.12 0.12</pos> <!-- Должно совпадать с logo -->
			<zIndex>20</zIndex>
			<storyboard event="activate">
			</storyboard>
			<storyboard>
				<animation property="opacity" from="0.75" to="0" begin="995" duration="4000" mode="EaseOut"/>
				<animation property="scale" from="1.05" to="1.4" begin="995" duration="4000" mode="EaseOut"/>
				<animation property="color" from="FFAAAA" to="FF7777" begin="975" duration="4000" mode="EaseOut"/>
			</storyboard>
		</image>
		<image name="md_cartridge">
			<pos if="${screen.ratio} == '4/3'">0.865 0.218</pos>
			<maxSize if="${screen.ratio} == '4/3'">0.245 0.30</maxSize>
		</image>
	<!-- Панель с иконками игроков, ачивок, руля и т.д.-->
		<stackpanel name="container-icons" extra="true">
			<separator>0.01</separator>
			<pos>0.63 0.575</pos>
			<size>0.18 0.032</size>
			<size if="${screen.ratio} == '4/3'">0.3 0.042</size>
			<orientation>horizontal</orientation>
			<backgroundColor>FF000000</backgroundColor>
			<zIndex>150</zIndex>
		</stackpanel>

	<stackpanel name="game-data" extra="true">
			<separator>0.009</separator>
			<pos>0.63 0.622</pos>
			<size>0.14 0.3</size>
			<size if="${screen.ratio} == '4/3'">0.3 0.4</size>
			<orientation>vertical</orientation>
			<backgroundColor>FF000000</backgroundColor>
			<zIndex>150</zIndex>
		
		<!-- Год выпуска -->
		<stackpanel visible="!empty({game:releaseyear})">
			<size>0 0.1</size>
			<separator>0.02</separator>
			<image>
				<path>${themePath}/_inc/images/game_info_releasedate.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
			</image>
			<text>
				<pos>0.08 0</pos> <!-- Сдвигает текст правее иконки -->
				<fontSize>0.022</fontSize>
				<fontSize if="${screen.ratio} == '4/3'">0.027</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>{game:releaseyear}</text>
				<color>666666</color>
				<padding>4 0 4 0</padding>
				<multiLine>false</multiLine>
				<autoScrollDelay>3000</autoScrollDelay>
				<singleLineScroll>true</singleLineScroll>
			</text>
		</stackpanel>
		
		<!-- Издатель (если не = разработчику) -->
		<stackpanel visible="{game:publisher} != {game:developer} &amp;&amp; !empty({game:publisher})">
			<size>0 0.1</size>
			<separator>0.02</separator>
			<image>
				<path>${themePath}/_inc/images/game_info_publisher.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<maxSize>1 1</maxSize>
				</image>
			<text>
				<pos>0.08 0</pos> <!-- Сдвигает текст правее иконки -->
				<fontSize>0.022</fontSize>
				<fontSize if="${screen.ratio} == '4/3'">0.027</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>{game:publisher}</text>
				<color>666666</color>
				<padding>4 0 4 0</padding>
				<multiLine>false</multiLine>
				<autoScrollDelay>3000</autoScrollDelay>
				<singleLineScroll>true</singleLineScroll>
			</text>
		</stackpanel>
		
		<!-- Разработчик (если не = издателю) -->
		<stackpanel visible="{game:publisher} != {game:developer} &amp;&amp; !empty({game:developer})">
			<size>0 0.1</size>
			<separator>0.02</separator>
			<image>
				<path>${themePath}/_inc/images/game_info_developer.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<maxSize>1 1</maxSize>
			</image>
			<text>
				<pos>0.08 0</pos> <!-- Сдвигает текст правее иконки -->
				<fontSize>0.022</fontSize>
				<fontSize if="${screen.ratio} == '4/3'">0.027</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>{game:developer}</text>
				<color>666666</color>
				<padding>4 0 4 0</padding>
				<multiLine>false</multiLine>
				<autoScrollDelay>3000</autoScrollDelay>
				<singleLineScroll>true</singleLineScroll>
			</text>
		</stackpanel>
		
		<!-- Если издатель == разработчик -->
		<stackpanel visible="{game:publisher} == {game:developer} &amp;&amp; !empty({game:developer})">
			<size>0 0.1</size>
			<separator>0.02</separator>
			<image>
				<path>${themePath}/_inc/images/game_info_publisher.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<maxSize>1 1</maxSize>
			</image>
			<image>
				<pos>0.08 0</pos>
				<path>${themePath}/_inc/images/game_info_developer.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<maxSize>1 1</maxSize>
			</image>
			<text>
				<pos>0.16 0</pos> <!-- Сдвигает текст правее иконки -->
				<fontSize>0.022</fontSize>
				<fontSize if="${screen.ratio} == '4/3'">0.027</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>{game:developer}</text>
				<color>666666</color>
				<padding>4 0 4 0</padding>
				<multiLine>false</multiLine>
				<autoScrollDelay>3000</autoScrollDelay>
				<singleLineScroll>true</singleLineScroll>
			</text>
		</stackpanel>
		
		<!-- Жанр -->
		<stackpanel visible="!empty({game:genre})">
			<size>0 0.1</size>
			<separator>0.02</separator>
			<image>
				<path>${themePath}/_inc/images/game_info_genre.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
			</image>
			<text>
				<pos>0.08 0</pos> <!-- Сдвигает текст правее иконки -->
				<fontSize>0.022</fontSize>
				<fontSize if="${screen.ratio} == '4/3'">0.027</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>{game:genre}</text>
				<color>666666</color>
				<padding>4 0 4 0</padding>
				<multiLine>false</multiLine>
				<autoScrollDelay>3000</autoScrollDelay>
				<singleLineScroll>true</singleLineScroll>
			</text>
		</stackpanel>
		
		<!-- Панель с иконками запуска, времени игры, посл. запуск -->
		<stackpanel visible="({game:playcount} &gt; 0 ? 1 : 0)">
			<size>0 0.1</size>
			<separator>0.02</separator>
			<!-- Кол-во запусков -->
			<image name="icons-playcount">
				<path>${themePath}/_inc/images/game_info_playcount3.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>{game:playcount} &gt; 0 ? 1 : 0</visible>
			</image>
			<text name="gamedata-playcount">
				<fontSize>0.022</fontSize>
				<fontSize if="${screen.ratio} == '4/3'">0.027</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>{game:playcount}</text>
				<color>666666</color>
				<padding>4 0 12 0</padding>
				<visible>{game:playcount} &gt; 0 ? 1 : 0</visible>
			</text>
			
			<!-- Время игры -->
			<image name="icons-gametime">
				<path>${themePath}/_inc/images/game_info_gametime.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>{game:gametime} &gt; 0 ? 1 : 0</visible>
			</image>
			<text name="gamedata-gametime">
				<fontSize>0.022</fontSize>
				<fontSize if="${screen.ratio} == '4/3'">0.027</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>expandseconds({game:gametime})</text>
				<color>666666</color>
				<padding>4 0 12 0</padding>
				<singleLineScroll>true</singleLineScroll>
				<autoScrollDelay>3000</autoScrollDelay>
				<visible>{game:gametime} &gt; 0 ? 1 : 0</visible>
			</text>
		</stackpanel>
		<stackpanel visible="({game:gametime} &gt; 0 ? 1 : 0)">
			<size>0 0.1</size>
			<separator>0.02</separator>
			<visible if="${screen.ratio} == '4/3'">false</visible>
			<!-- Последний запуск -->
			<image name="icons-lastplayed">
				<path>${themePath}/_inc/images/game_info_lastplayed.svg</path>
				<linearSmooth>true</linearSmooth>
				<color>666666</color>
				<padding>0 0</padding>
				<maxSize>1 1</maxSize>
				<visible>{game:gametime} &gt; 0 ? 1 : 0</visible>
			</image>
			<text name="gamedata-lastplayed">
				<fontSize>0.022</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>day({game:lastplayed}) + '.' + month({game:lastplayed}) + '.' + year({game:lastplayed})</text>
				<color>666666</color>
				<padding>4 0 12 0</padding>
				<singleLineScroll>true</singleLineScroll>
				<autoScrollDelay>3000</autoScrollDelay>
				<visible>{game:gametime} &gt; 0 ? 1 : 0</visible>
			</text>
		</stackpanel>
		
		<!-- Панель с флагами и рейтингом -->
		<stackpanel>
			<size>0 0.1</size>
			<separator>0.02</separator>
			<!-- Флаги / Flags -->
			<image name="flag-region">
				<path>${themePath}/_inc/images/flags/{game:region}.png</path>
				<maxSize>0.8</maxSize>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.4</pos>
				<linearSmooth>true</linearSmooth>
				<opacity>0.8</opacity>
				<visible>{game:region} != {game:lang} &amp;&amp; !contains(lower({game:region}), ',') &amp;&amp; !empty({game:region})</visible>
			</image>
			<image name="flag-force-world">
				<path>${themePath}/_inc/images/flags/wr.png</path>
				<maxSize>0.8</maxSize>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.4</pos>
				<linearSmooth>true</linearSmooth>
				<opacity>0.8</opacity>
				<visible>contains(lower({game:region}), ',') &amp;&amp; !empty({game:region})</visible>
			</image>
			<image name="flag-lang">
				<path>${themePath}/_inc/images/flags/{game:lang}.png</path>
				<maxSize>0.8</maxSize>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.4</pos>
				<linearSmooth>true</linearSmooth>
				<opacity>0.8</opacity>
				<visible>!contains(lower({game:lang}), ',') &amp;&amp; !empty({game:lang})</visible>
			</image>
			<text name="gamedata-lang">
				<fontSize>0.019</fontSize>
				<fontPath>${fontNameReg}</fontPath>
				<text>{game:lang}.upper()</text>
				<color>FFFFFF</color>
				<padding>4 0 4 0</padding>
				<singleLineScroll>true</singleLineScroll>
				<autoScrollDelay>0</autoScrollDelay>
				<y>0.02</y>
				<visible>contains(lower({game:lang}), ',') &amp;&amp; !empty({game:lang})</visible>
			</text>
			
			<!-- Рейтинг -->
			<text name="gamedata-stars">
				<fontSize>0.028</fontSize>
				<text>{game:stars}</text>
				<color>666666</color>
				<visible>!empty({game:stars})</visible>
			</text>
		</stackpanel>
	</stackpanel>
	</customView>
</theme>