<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Лого + подробно -->
	<customView name="Logo + Details" inherits="Grid + Details" displayName="${logoDetailsViewName}">
		<imagegrid name="gamegrid">
			<size>0.66 0.79</size>
			<autoLayout>4 3</autoLayout>
			<autoLayout if="${screen.ratio} == '4/3'">3 3</autoLayout>
			<autoLayout if="${screen.ratio} == '21/9'">6 3</autoLayout>
			<imageSource>marquee</imageSource>
		</imagegrid>
		<image name="gridtile.favorite">
			<maxSize>0.14 0.24</maxSize>
		</image>
		<ninepatch name="gridtile.background:selected">
			<path>${themePath}/_inc/images/framewselsq2.png</path>
			<cornerSize>0 0</cornerSize>
		</ninepatch>
		<video name="md_video">
			<delay>1.5</delay>
			<snapshotSource>thumbnail</snapshotSource>
		</video>
	</customView>
</theme>