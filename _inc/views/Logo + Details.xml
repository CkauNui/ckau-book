<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Лого + подробно -->
	<customView name="Logo + Details" inherits="Grid + Details" displayName="${logoDetailsViewName}">
		<imagegrid name="gamegrid">
			<size>0.66 0.79</size>
			<autoLayout>4 3</autoLayout>
			<autoLayout if="${screen.ratio} == '21/9'">6 3</autoLayout>
			<margin>0.005 0.010</margin>
			<padding>0.03 0.04 0.03 0.1</padding>
			<imageSource>marquee</imageSource>
		</imagegrid>
		<text name="gridtile">
			<visible>false</visible>
			<size>0 0</size>
		</text>
		<image name="gridtile.favorite">
			<path>./../../_inc/images/favorite.png</path>
			<pos>0.95 0.05</pos>
			<maxSize>0.14 0.44</maxSize>
			<origin>0.5 0.5</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<color>FFFF00B0</color>
		</image>
		<ninepatch name="gridtile.background:selected">
			<path>./../../_inc/images/framewselsq2.png</path>
			<cornerSize>0 0</cornerSize>
			<padding>-18 -18</padding>
			<color>${baseColor}</color>
			<animateColor>141414</animateColor>
			<animateColorTime>650</animateColorTime>
		</ninepatch>
	</customView>
</theme>