			<linearSmooth>true</linearSmooth>
			<pos>0.8625 0.1227777777777778</pos>
			<maxSize>0.200 0.126</maxSize>
			<zIndex>160</zIndex>
		</image>
		<textlist name="gamelist">
			<pos>0.7578125 0.2416666666666667</pos>
			<size>0.209375 0.6755555555555556</size>
			<lines>19</lines>
			<zIndex>100</zIndex>
		</textlist>
		<image name="gamelist-background" extra="true">
			<color>161616</color>
			<zIndex>90</zIndex>
		</image>
		<image name="art" extra="true">
			<origin>0 0</origin>
			<pos>0 0.025</pos>
			<size>0.725 1</size>
			<path>./../../_inc/images/overlay3.png</path>
			<zIndex>90</zIndex>
		</image>
		<image name="art2" extra="true">
			<origin>0.5 0.5</origin>
