<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Colorful + Gamelist (горизонтально 2) -->
<customView name="Colorful + Gamelist (horizontally 2)" inherits="detailed" displayName="${Colorful2-2ViewNameGame}">
