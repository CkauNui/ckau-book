		</image>
		<image name="background" extra="true">
			<color>141414</color>
		</image>
  		
		<image name="md_thumbnail">
			<pos>0.112 0.927</pos>
			<maxSize>0.2 0.325</maxSize>
			<zIndex>190</zIndex>
			<verticalAlignment>top</verticalAlignment>
			<storyboard>
				<animation property="opacity" to="0" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1000" mode="EaseIn"/>
				<animation property="pos" to="0.112 0.827" begin="0" duration="0" mode="linear"/>
				<animation property="pos" from ="0.112 0.827" to="0.112 0.927" begin="1000" duration="1000" mode="linear"/>
			</storyboard>
		</image>
		
		<text name="md_name" extra="true">
			<pos>0.225 0.54</pos>
			<size>0.5 0.1</size>
			<alignment>left</alignment>
			<verticalAlignment>bottom</verticalAlignment>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<color>FFFFFF</color>
			<fontSize>0.04</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<color>f0f0f0</color>
			<glowColor>000000</glowColor>
			<glowSize>2</glowSize>
			<glowOffset>3 2</glowOffset>
			<zIndex>190</zIndex>
			<storyboard>
				<animation property="y" from="0.5" begin="500" duration="1000" mode="linear"/>
				<animation property="opacity" to="0" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1000" mode="EaseIn"/>
			</storyboard>
		</text>
		<image name="md-description-border" extra="true">
			<visible>false</visible>
			<zIndex>1</zIndex>
		</image>
		<image name="md-description-border2" extra="true">
			<visible>false</visible>
			<zIndex>1</zIndex>
		</image>
		<text name="md_description" extra="true">
			<pos>0.225 0.705</pos>
			<size>0.485 0.21</size>
			<alignment>left</alignment>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<color>666666</color>
			<fontSize>0.025</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>140</zIndex>
			<storyboard>
				<animation property="y" from="0.8" begin="1000" duration="1000" mode="linear"/>
				<animation property="opacity" to="0" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="1000" duration="1000" mode="EaseIn"/>
			</storyboard>
		</text>

		<video name="md_video">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>0.725</size>
			<delay>0</delay>
			<color>FFFFFFE0</color>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<snapshotSource>image</snapshotSource>
			<effect>none</effect>
			<zIndex>80</zIndex>
		</video>
		<image name="md_marquee" extra="true">
			<linearSmooth>true</linearSmooth>
			<visible>true</visible>
			<zIndex>175</zIndex>
			<pos>0.13 0.08</pos>
			<maxSize>0.200 0.126</maxSize>
			<storyboard repeatAt="200">
				<animation property="y" from="-0.2" begin="0" duration="200" mode="linear"/>
			</storyboard>
		</image>

		<text name="md_players,md_genre,md_developer,md_publisher,md_playcount,md_gametime,md_releasedate,md_lastplayed">
			<color>666666</color>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<fontSize>0.0194444444444444</fontSize>
		</text>
		<rating name="md_rating">
			<pos>0.225 0.642</pos>
			<size>0.05 0.03</size>
			<color>666666</color>
			<origin>0 0</origin>
			<horizontalAlignment>left</horizontalAlignment>
			<unfilledColor>80808030</unfilledColor>
			<unfilledPath>./../../_inc/images/star_filled.svg</unfilledPath>
			<zIndex>150</zIndex>
		</rating>

		<datetime name="md_releasedate">
			<pos>0.31 0.646</pos>
			<size>0.04 0.0222222222222222</size>
			<rotation>0</rotation>
			<alignment>center</alignment>
			<format>%Y</format>
			<fontSize>0.020</fontSize>
			<color>666666</color>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<zIndex>150</zIndex>
		</datetime>
		<text name="md_developer">
			<pos>0.355 0.646</pos>
			<size>0.30 0.0222222222222222</size>
			<alignment>left</alignment>
			<fontSize>0.020</fontSize>
			<color>666666</color>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<zIndex>150</zIndex>
		</text>
		<text name="md_genre">
			<pos>0.407 0.646</pos>
			<size>0.30 0.0222222222222222</size>
			<alignment>right</alignment>
			<fontSize>0.020</fontSize>
			<color>666666</color>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<zIndex>150</zIndex>
		</text>


		<image name="md_flag">
			<origin>0.5 0.5</origin>
			<pos>0.9260 0.973</pos>
			<maxSize>0.015 0.02</maxSize>
			<zIndex>150</zIndex>
		</image>
		<text name="md_players">
			<pos>0.9045 0.973</pos>
			<size>0.03 0.03</size>
			<origin>0.5 0.5</origin>
			<fontPath>${fontPlayers}</fontPath>
			<text>1</text>
			<alignment>center</alignment>
			<verticalAlignment>center</verticalAlignment>
			<fontSize>0.02</fontSize>
			<color>666666</color>
			<zIndex>150</zIndex>
		</text>
		<image name="md_manual,md_nomanual">
			<pos>0.8830 0.9736</pos>
			<path>./../../_inc/images/book.png</path>
			<maxSize>0.02 0.02</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_cheevos,md_notcheevos">
