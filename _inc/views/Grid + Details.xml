<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Сетка + подробно -->
	<customView name="Grid + Details" inherits="grid" displayName="${gridDetailsViewName}">
		<imagegrid name="gamegrid">
			<size>0.66 0.79</size>
			<autoLayout>5 2</autoLayout>
			<autoLayout if="${screen.ratio} == '21/9'">7 2</autoLayout>
		</imagegrid>
		<text name="gridtile">
			<visible>false</visible>
			<size>0 0</size>
		</text>
		<image name="md_image">
			<visible>false</visible>
		</image>
		<text name="md_name">
			<pos>0.68 0.108</pos>
			<size>0.30 0.1</size>
			<color>F0F0F0</color>
			<fontSize>0.032</fontSize>
			<verticalAlignment>bottom</verticalAlignment>
			<horizontalAlignment>center</horizontalAlignment>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
		</text>
		<text name="md_developer">
			<color>808080FF</color>
			<pos>0.68 0.206</pos>
			<size>0.30 0.05</size>
			<alignment>center</alignment>
			<fontSize>0.020</fontSize>
			<glowColor>00000016</glowColor>
			<glowSize>3</glowSize>
			<fontPath>${fontNameReg}</fontPath>
		</text>
		<video name="md_video">
			<pos>0.83 0.455</pos>
			<maxSize>0.30 0.383</maxSize>
			<origin>0.5 0.5</origin>
			<delay>0.3</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<snapshotSource>image</snapshotSource>
			<effect>none</effect>
			<zIndex>110</zIndex>
		</video>
		<image name="md_marquee">
			<visible>false</visible>
		</image>
		<text name="md_description">
			<pos>0.68 0.68</pos>
			<size>0.3 0.18</size>
			<lineSpacing>1.18</lineSpacing>
			<fontSize>0.024</fontSize>
			<color>A0A0B0</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
			<lineSpacing>1.3</lineSpacing>
			<fontPath>${fontDescReg}</fontPath>
		</text>
		<datetime name="md_releasedate">
			<origin>0 0</origin>
			<pos>0.8725 0.9045</pos>
			<size>0.03 0.0222222222222222</size>
			<rotation>0</rotation>
			<alignment>left</alignment>
			<format>%Y</format>
			<fontPath>./../../_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
			<zIndex>180</zIndex>
		</datetime>
		<image name="md_flag">
			<origin>0 0</origin>
			<pos>0.85 0.905</pos>
			<pos if="${screen.ratio} == '21/9'">0.85 0.902</pos>
			<maxSize>0.015 0.045</maxSize>
		</image>
		<rating name="md_rating">
			<pos>0.9595 0.900</pos>
			<size>0.05 0.03</size>
			<rotation>0</rotation>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>			
			<origin>0.5 0</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<unfilledColor>${unfilledColor}</unfilledColor>
			<unfilledPath>./../../_inc/images/star_filled.svg</unfilledPath>
		</rating>
		<text name="md_players">
			<pos>0.832 0.909</pos>
			<size>0.03 0.03</size>
			<origin>0.5 0.5</origin>
			<fontPath>./../../_inc/fonts/players.ttf</fontPath>
			<text>1</text>
			<alignment>center</alignment>
			<fontSize>0.03</fontSize>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
		</text>
		<image name="md_manual,md_nomanual">
			<pos>0.808 0.914</pos>
			<path>./../../_inc/images/book.png</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_cheevos,md_notcheevos">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/Contest.png</path>
			<pos>0.7865 0.914</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
			<zIndex>100</zIndex>
		</image>
		<image name="fake_cheevos" extra="true">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/Contest.png</path>
			<pos>0.7865 0.914</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>${unfilledColor}</color>
			<color ifSubset="gamelistbgcolor:Default">80808030</color>
			<zIndex>90</zIndex>
		</image>
		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/SaveState.png</path>
			<pos>0.765 0.914</pos>
			<x ifCheevos="false">0.765</x>
			<y ifCheevos="false">0.914</y>
			<maxSize>0.02 0.03</maxSize>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_hidden">
			<pos>0.7425 0.914</pos>
			<path>./../../_inc/images/hidden.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_kidgame,md_notkidgame">
			<pos>0.722 0.914</pos>
			<path>./../../_inc/images/kid.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textDateColor}</color>
			<color ifSubset="gamelistbgcolor:Default">FFFFFF80</color>
			<zIndex>150</zIndex>
		</image>
		<image name="md_notkidgame"> 
			<color>${unfilledColor}</color>
			<color ifSubset="gamelistbgcolor:Default">80808030</color>
		</image>
		<image name="md_nosavestate">
			<color>${unfilledColor}</color>
			<color ifSubset="gamelistbgcolor:Default">80808030</color>
		</image>
		<image name="md_notcheevos">
			<color>${unfilledColor}</color>
			<color ifSubset="gamelistbgcolor:Default">80808030</color>
		</image>
		<image name="md_nomanual">
			<color>${unfilledColor}</color>
			<color ifSubset="gamelistbgcolor:Default">80808030</color>
		</image>
	</customView>
</theme>