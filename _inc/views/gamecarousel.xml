<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Подробно + Карусель -->
<view name="gamecarousel" displayName="${gameCarouselViewName}">
		<text name="md_lbl_rating,md_lbl_releasedate,md_lbl_lastplayed,md_lbl_developer,md_lbl_publisher,md_lbl_genre,md_lbl_players,md_lbl_playcount">
			<color>111111</color>
			<visible>false</visible>
			<fontSize>0.019</fontSize>
		</text>
		<text name="md_players,md_genre,md_description,md_developer,md_publisher,md_playcount,md_gametime">
			<color>111111</color>
			<fontPath>${fontDescReg}</fontPath>
			<fontSize>0.019</fontSize>
		</text>
		<datetime name="md_lastplayed,md_releasedate">
			<color>111111</color>
			<fontPath>${fontDescReg}</fontPath>
			<fontSize>0.019</fontSize>
		</datetime>
		<video name="md_video">
			<pos>0.520625 0.678</pos>
			<maxSize>0.35</maxSize>
			<origin>0.5 1</origin>
			<delay>0.3</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<snapshotSource>image</snapshotSource>
			<effect>none</effect>
			<zIndex>110</zIndex>
			<scaleOrigin>1</scaleOrigin>
		</video>
		<image name="md_marquee">
			<visible>false</visible>
		</image>
		<text name="md_name" extra="true">
			<pos>0.005 0.005</pos>
			<alignment>left</alignment>
			<fontPath>${fontNameBold}</fontPath>
			<color>80808040</color>
			<fontSize>0.024</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>140</zIndex>
		</text>
		<image name="logo">
			<pos>0.49 0.08</pos>
			<maxSize>0.160 0.086</maxSize>
			<origin>0.5 0.5</origin>
			<visible>false</visible>
			<zIndex>150</zIndex>
		</image>
		<image name="background" extra="true">
			<tile>true</tile>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./../../_inc/images/space.png</path>
			<color>CCCCCC</color>
		</image>
		<image name="md_thumbnail">
			<origin>0.5 1</origin>
			<pos>0.18 0.677</pos>
			<maxSize>0.3078125 0.585</maxSize>
			<linearSmooth>true</linearSmooth>
		</image>

		<image name="md-description-border" extra="true">
			<pos>0.0484 0.706</pos>
			<size>0.6455 0.002</size>
			<origin>0 0.5</origin>
			<path>./../../_inc/images/space.png</path>
			<color>AAAAAA</color>
			<zIndex>106</zIndex>
		</image>
		<text name="md_description">
			<fontPath>${fontDescReg}</fontPath>
			<pos>0.061875 0.705</pos>
			<size>0.6188125 0.224</size>
			<fontSize>0.024</fontSize>
			<lineSpacing>1.3</lineSpacing>
			<zIndex>105</zIndex>
		</text>
		<image name="md-description-border2" extra="true">
			<pos>0.0484 0.927</pos>
			<size>0.6455 0.002</size>
			<origin>0 0.5</origin>
			<path>./../../_inc/images/space.png</path>
			<color>AAAAAA</color>
			<zIndex>106</zIndex>
		</image>
		<image name="gamelist-background" extra="true">
			<origin>0 0</origin>
			<pos>0.725 0</pos>
			<size>0.275 1</size>
			<path>./../../_inc/images/space.png</path>
			<color>141414</color>
		</image>
		<gamecarousel name="gamecarousel">
			<type>vertical_wheel</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<logoScale>1.3</logoScale>
			<logoSize>0.18 0.18</logoSize>
			<logoRotation>-6.5</logoRotation>
			<logoRotationOrigin>4.0 0.3</logoRotationOrigin>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>7</maxLogoCount>
			<zIndex>75</zIndex>
			<imageSource>marquee</imageSource> <!-- text, image, thumbnail, marquee -->
			<scrollSound>./../../_inc/sound/scroll.wav</scrollSound>
		</gamecarousel>
		<text name="gamecarouselLogoText">
			<color>FFFFFFFF</color>
			<glowColor>000000FF</glowColor>
			<glowSize>3</glowSize>
			<lineSpacing>1.0</lineSpacing>
			<fontSize>0.03</fontSize>
		</text>
		<text name="logoText">
			<pos>0.784375 0.152</pos>
			<size>0.15625 0.055</size>
			<fontSize>0.044</fontSize>
			<fontPath>${fontNameBold}</fontPath>
			<forceUppercase>true</forceUppercase>
			<color>555555</color>
		</text>
		<image name="md_flag">
			<origin>0 0.5</origin>
			<pos>0.5415 0.11</pos>
			<maxSize>0.02 0.05</maxSize>
			<color>FFFFFFFF</color>
			<zIndex>100</zIndex>
		</image>
		<rating name="md_rating">
			<pos>0.4124 0.2455</pos>
			<size>0.05 0.03</size>
			<color>666666</color>
			<origin>0.5 0</origin>
			<horizontalAlignment>left</horizontalAlignment>
			<unfilledColor>80808040</unfilledColor>
			<unfilledPath>./../../_inc/images/star_filled.svg</unfilledPath>
			<zIndex>100</zIndex>
		</rating>
		<text name="md_players">
			<pos>0.396 0.105</pos>
			<size>0.04 0.04</size>
			<origin>0.5 0.5</origin>
			<fontPath>${fontPlayers}</fontPath>
			<text>1</text>
			<!--<size>0.03 0.03</size>
			<pos>0.976 0.37</pos>-->
			<alignment>center</alignment>
			<fontSize>0.034</fontSize>
			<color>666666</color>
			<zIndex>100</zIndex>
		</text>
		<image name="md_manual,md_nomanual">
			<path>./../../_inc/images/book.png</path>
			<pos>0.4195 0.108</pos>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<image name="md_nomanual">
			<color>80808040</color>
		</image>
		<image name="md_cheevos,md_notcheevos">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/Contest.png</path>
			<pos>0.440 0.108</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<image name="fake_cheevos" extra="true">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/Contest.png</path>
			<pos>0.440 0.108</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>80808040</color>
			<zIndex>100</zIndex>
		</image>
		<image name="md_notcheevos">
			<color>80808040</color>
		</image> 
		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./../../_inc/icons/SaveState.png</path>
			<pos>0.462 0.108</pos>
			<x ifCheevos="false">0.462</x>
			<maxSize>0.02 0.03</maxSize>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<image name="md_nosavestate">
			<color>80808030</color>
		</image>

		<image name="md_hidden">
			<path>./../../_inc/images/hidden.svg</path>
			<pos>0.504 0.108</pos>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<image name="md_kidgame,md_notkidgame">
			<path>./../../_inc/images/kid.svg</path>
			<pos>0.483 0.108</pos>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<image name="md_notkidgame"> 
			<color>80808000</color>
		</image>


		<datetime name="md_releasedate">
			<pos>0.4106 0.135</pos>
			<size>0.12 0.0222</size>
			<format>%Y</format>
			<zIndex>100</zIndex>
		</datetime>
		<image name="release_date_logo" extra="true">
			<pos>0.3956 0.146</pos>
			<maxSize>0.02 0.03</maxSize>
			<path>./../../_inc/images/game_info_releasedate.svg</path>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<text name="md_publisher">
			<pos>0.4106 0.173</pos>
			<size>0.12 0.0222</size>
			<zIndex>100</zIndex>
		</text>
		<image name="publisher_logo" extra="true">
			<pos>0.3956 0.184</pos>
			<maxSize>0.02 0.03</maxSize>
			<path>./../../_inc/images/game_info_publisher.svg</path>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<text name="md_playcount">
			<pos>0.4106 0.211</pos>
			<size>0.12 0.0222</size>
			<zIndex>100</zIndex>
		</text>
		<image name="playcount_logo" extra="true">
			<pos>0.3956 0.222</pos>
			<maxSize>0.02 0.03</maxSize>
			<path>./../../_inc/images/game_info_playcount3.svg</path>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>

		<text name="md_developer">
			<pos>0.5655 0.135</pos>
			<size>0.12 0.0222</size>
			<zIndex>100</zIndex>
		</text>
		<image name="developer_logo" extra="true">
			<pos>0.551 0.146</pos>
			<maxSize>0.02 0.03</maxSize>
			<path>./../../_inc/images/game_info_developer.svg</path>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<text name="md_genre">
			<pos>0.5655 0.173</pos>
			<size>0.12 0.0222</size>
			<zIndex>100</zIndex>
		</text>
		<image name="genre_logo" extra="true">
			<pos>0.551 0.184</pos>
			<maxSize>0.02 0.03</maxSize>
			<path>./../../_inc/images/game_info_genre.svg</path>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
		<datetime name="md_lastplayed">
			<pos>0.5655 0.205</pos>
			<size>0.12 0.0222</size>
			<origin>0.5 0.5</origin>
			<zIndex>1</zIndex>
			<visible>false</visible>
		</datetime>
		<text name="md_gametime">
			<pos>0.5655 0.211</pos>
			<size>0.128 0.0222</size>
		</text>
		<image name="gametime_logo" extra="true">
			<pos>0.551 0.222</pos>
			<maxSize>0.02 0.03</maxSize>
			<path>./../../_inc/images/game_info_lastplayed.svg</path>
			<origin>0.5 0.5</origin>
			<color>666666</color>
			<zIndex>100</zIndex>
		</image>
	</view>
<!-- Navigation arrows, if enabled -->
	<include ifSubset="arrows:On">./../../_inc/views/arrows.xml</include>
</theme>