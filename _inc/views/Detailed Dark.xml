<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Подробно (тёмная версия) -->
	<customView name="Detailed Dark" inherits="detailed" displayName="${DetailDarkViewName}">

		<image name="video-background" extra="true">
			<color>666666</color>
		</image>
		<image name="background" extra="true">
			<color>161616</color>
		</image>

		<image name="md-description-border" extra="true">
			<color>666666</color>
		</image>
		<text name="md_description">
			<color>aaaaaa</color>
		</text>
		<image name="md-description-border2" extra="true">
			<color>666666</color>
		</image>

		<datetime name="md_releasedate">
			<color>aaaaaa</color>
		</datetime>
		<text name="md_publisher">
			<color>aaaaaa</color>
		</text>
		<text name="md_playcount">
			<color>aaaaaa</color>
		</text>
		<text name="md_developer">
			<color>aaaaaa</color>
		</text>
		<text name="md_genre">
			<color>aaaaaa</color>
		</text>
		<datetime name="md_lastplayed">
			<color>aaaaaa</color>
		</datetime>
		<text name="md_gametime">
			<color>aaaaaa</color>
		</text>
	</customView>
<!-- Navigation arrows, if enabled -->
	<include ifSubset="arrows:On">./../../_inc/views/arrows.xml</include>
</theme>