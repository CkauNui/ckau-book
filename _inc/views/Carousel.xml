<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Карусель -->
	<customView name="Carousel" inherits="grid" displayName="${carouselViewName}">
		<text name="md_name">
			<color>FFFFFFFF</color>
			<pos>0.5 0.82</pos>
			<size>0.92 0.10</size>
			<fontSize>0.026</fontSize>
			<fontSize if="${screen.ratio} == '4/3'">0.035</fontSize>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
			<multiLine>false</multiLine>
			<autoScrollDelay>3000</autoScrollDelay>
			<singleLineScroll>true</singleLineScroll>
		</text>
		<text name="md_developer">
			<color>808080FF</color>
			<pos>0.04 0.80</pos>
			<size>0.92 0.10</size>
			<fontSize>0.020</fontSize>
			<pos if="${screen.ratio} == '4/3'">0.04 0.82</pos>
			<fontSize if="${screen.ratio} == '4/3'">0.026</fontSize>
			<alignment>center</alignment>
			<fontPath>${fontNameBold}</fontPath>
			<glowColor>00000035</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>3 2</glowOffset>
			<zIndex>140</zIndex>
		</text>
		<imagegrid name="gamegrid">
			<pos>0 0.16</pos>
			<size>1 0.84</size>
			<padding>0.01 0.14 0.01 0.30</padding>
			<scrollDirection>horizontal</scrollDirection>
			<autoLayout>5 1</autoLayout>
			<autoLayout if="${screen.ratio} == '4/3'">3 1</autoLayout>
			<margin if="${screen.ratio} == '4/3'">-0.14 0</margin>
			<autoLayout if="${screen.ratio} == '21/9'">7 1</autoLayout>
			<autoLayoutSelectedZoom>1.50</autoLayoutSelectedZoom>
			<centerSelection>true</centerSelection>
			<scrollLoop>true</scrollLoop>
		</imagegrid>
		<gridtile name="default">
			<padding>64 16</padding>
			<reflexion>0.24 0.0</reflexion>
		</gridtile>
		<gridtile name="selected">
			<backgroundCenterColor>FFFFFF00</backgroundCenterColor>
			<backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
			<padding>64 16</padding>
		</gridtile>
		<text name="gridtile">
			<color>80808080</color>
			<fontSize>0.016</fontSize>
			<size>1 0</size>
		</text>
		<text name="gridtile_selected">
			<color>FFFFFF00</color>
			<fontSize>0.035</fontSize>
			<size>1 0</size>
		</text>
		<ninepatch name="gridtile.background:selected">
			<color>FFFFFF00</color>
			<visible>false</visible>
			<animateColor>FFFFFF00</animateColor>
			<animateColorTime>0</animateColorTime>
		</ninepatch>
	</customView>
</theme>