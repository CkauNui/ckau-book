	</image>
	<text name="image-text" extra="true">
		<text>&lt;IMAGE&gt;</text>
		<x>0.36</x>
	</text>
	
	<video name="game-video" extra="true">
		<default>${themePath}/_inc/anim/video/CRT_Noise.mp4</default>
		<path>{game:video}</path>
		<delay>0.01</delay>
		<effect>none</effect>
		<x>0.62</x>
		<y>0.19</y>
		<maxSize>0.2 0.25</maxSize>
		<origin>0.5 0.5</origin>
		<zIndex>100</zIndex>
	</video>
	<text name="video-text" extra="true">
		<text>&lt;VIDEO&gt;</text>z
		<x>0.62</x>
	</text>

	<!-- 2 Line -->
	<image name="marquee-test" extra="true">
		<x>0.10</x>
		<path>{game:marquee}</path>
		<maxSize>0.17 0.25</maxSize>
	</image>
	<text name="marquee-text" extra="true">
		<text>&lt;MARQUEE&gt;</text>
		<x>0.10</x>
	</text>
	
	<image name="fanart-test" extra="true">
		<path>{game:fanart}</path>
		<maxSize>0.22 0.25</maxSize>
		<x>0.36</x>
	</image>
	<text name="fanart-text" extra="true">
		<text>&lt;FANART&gt;</text>
		<x>0.36</x>
	</text>
	
	<image name="cartridge-test" extra="true">
		<path>{game:cartridge}</path>
		<x>0.62</x>
		<maxSize>0.17 0.25</maxSize>
	</image>
	<text name="cartridge-text" extra="true">
