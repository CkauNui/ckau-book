<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="Colorful + Gamelist (vertically)">
<formatVersion>7</formatVersion>
<!-- Журналы -->
	<customView name="Icons" inherits="Tiles" displayName="${iconsViewName}">
		<imagegrid name="gamegrid">
			<autoLayout>7 2</autoLayout>
			<cellProportion>0.6</cellProportion>
			<cellProportion verticalScreen="true">0.77</cellProportion>
			<autoLayout verticalScreen="true">2 0</autoLayout>
			<margin>0.008 0.010</margin>
		</imagegrid>
		<text name="gridtile">
			<fontSize>0.022</fontSize>
			<size>1 0.12</size>
			<padding>0 0.01 0 0.1</padding>
			<alignment>left</alignment>
			<singleLineScroll>false</singleLineScroll>
		</text>
		<text name="gridtile_selected">
			<singleLineScroll>true</singleLineScroll>
		</text>
		<image name="gridtile.image">
			<linearSmooth>true</linearSmooth>
		</image>
	</customView>
</theme>