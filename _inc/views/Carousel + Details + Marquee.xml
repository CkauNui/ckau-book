<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>
<!-- Карусель + подробно + лого -->
	<customView name="Carousel + Details + Marquee" inherits="Carousel + Details" tinyScreen="false" displayName="${carouselDetailsMarqueeViewName}">
		<image name="md_marquee">
			<pos>0.83 0.17</pos>
			<maxSize>0.25 0.14</maxSize>
			<visible>true</visible>
			<zIndex>120</zIndex>
		</image>
		<text name="md_developer">
			<visible>false</visible>
		</text>
		<text name="md_name" extra="true">
			<pos>0.005 0.005</pos>
			<alignment>left</alignment>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<color>FFFFFF1F</color>
			<fontSize>0.02</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>140</zIndex>
			<size>0.50 0.02</size>
			<glowColor>${glowColor}</glowColor>
			<glowSize>0</glowSize>
		</text>
	</customView>
</theme>