<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="Colorful + Gamelist (vertically)">
<formatVersion>7</formatVersion>
<!-- Карусель + подробно -->
	<customView name="Carousel + Details" inherits="Carousel" tinyScreen="false" displayName="${carouselDetailsViewName}">
		<imagegrid name="gamegrid">
			<pos>0 0.16</pos>
			<size>0.66 0.84</size>
			<autoLayout>3 1</autoLayout>
			<padding>0.01 0.14 0.01 0.30</padding>
		</imagegrid>
		<image name="gamelistBackground" extra="true">
			<path>./../../_inc/images/space.png</path>
			<color>141414</color>
			<origin>0 0</origin>
			<pos>0.66 0.16</pos>
			<size>0.34 0.774</size>
			<zIndex>12</zIndex>
		</image>
		<image name="md_image">
			<visible>false</visible>
		</image>
		<text name="md_name">
			<color>ffffffff</color>
			<pos>0.68 0.188</pos>
			<size>0.30 0.05</size>
			<color>F0F0F0</color>
			<fontSize>0.032</fontSize>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<alignment>center</alignment>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
		</text>
		<video name="md_video">
			<pos>0.83 0.455</pos>
			<maxSize>0.30 0.3833333333333333</maxSize>
			<origin>0.5 0.5</origin>
			<delay>0.1</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<snapshotSource>image</snapshotSource>
			<effect>none</effect>
			<zIndex>110</zIndex>
		</video>
		<image name="md_marquee">
			<visible>false</visible>
		</image>
		<image name="video-background" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.83 0.455</pos>
			<size>0.30625 0.3944444444444444</size>
			<path>./../../_inc/images/space.png</path>
			<color>333333ff</color>
			<zIndex>100</zIndex>
		</image>
		<image name="video-screen" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.83 0.455</pos>
			<size>0.30 0.3833333333333333</size>
