<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="Colorful + Gamelist (vertically)">
<formatVersion>7</formatVersion>
<!-- Обои -->
	<customView name="Wallpapers" inherits="grid" displayName="${WallViewName}">
		<image name="ArrowBG" extra="static">
			<zIndex>175</zIndex>
			<color>141414</color>
			<path>./../../_inc/images/arrow_bg.jpg</path>
			<path>./../../_inc/images/arrow_bg.png</path>
			<pos>0.98 0.018</pos>
			<maxSize>0.04</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		<image name="ArrowUp" extra="static">
			<zIndex>176</zIndex>
			<color>666666</color>
			<path>./../../_inc/images/arrow_up.jpg</path>
			<path>./../../_inc/images/arrow_up.png</path>
			<pos>0.97 0.018</pos>
			<maxSize>0.015</maxSize>
			<storyboard repeat="forever">
				<animation property="y" from="0.018" to="0.010" begin="0" duration="700" mode="linear"/>
				<animation property="y" from="0.010" to="0.018" begin="700" duration="700" mode="linear"/>
			</storyboard>
			<origin>0.5 0.5</origin>
		</image>
		<image name="ArrowDown" extra="static">
			<zIndex>176</zIndex>
			<color>666666</color>
			<path>./../../_inc/images/arrow_down.jpg</path>
			<path>./../../_inc/images/arrow_down.png</path>
			<pos>0.991 0.018</pos>
			<maxSize>0.015</maxSize>
			<storyboard repeat="forever">
				<animation property="y" from="0.018" to="0.025" begin="0" duration="700" mode="linear"/>
				<animation property="y" from="0.025" to="0.018" begin="700" duration="700" mode="linear"/>
			</storyboard>
			<origin>0.5 0.5</origin>
		</image>
		<image name="art" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<minSize>1 1</minSize>
			<path>./../../_inc/images/overlay1.png</path>
			<zIndex>100</zIndex>
		</image>
		<image name="md_image">
			<tile>true</tile>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<minSize>1 1</minSize>
			<color>FFFFFFDF</color>
		</image>
		<text name="md_description">
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<pos>0.025 0.226111111111111</pos>
			<size>0.3098125 0.2880555555555556</size>
			<fontSize>0.025</fontSize>
			<color>FFFFFFff</color>
			<glowColor>00000016</glowColor>
			<glowSize>3</glowSize>
			<zIndex>150</zIndex>
		</text>
		<imagegrid name="gamegrid">
			<pos>0.75 0</pos>
			<size>0.25 1</size>
			<margin>0.005 0.010</margin>
			<scrollDirection>vertical</scrollDirection>
			<autoLayout>1 7</autoLayout>
			<autoLayoutSelectedZoom>1.3</autoLayoutSelectedZoom>
			<animateSelection>false</animateSelection>
			<scrollSound>./../../_inc/sound/scroll.wav</scrollSound>
			<scrollbarColor>333333ff</scrollbarColor>
			<scrollbarCorner>0.49</scrollbarCorner>
			<scrollbarSize>0.005</scrollbarSize>
			<scrollbarAlignment>right</scrollbarAlignment>
			<imageSource>marquee</imageSource>
			<centerSelection>true</centerSelection>
			<zIndex>150</zIndex>
		</imagegrid>
		<gridtile name="default">
			<backgroundColor>FFFFFF00</backgroundColor>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<selectionMode>image</selectionMode>
			<padding>0 0</padding>
			<imageColor>A0A0A070</imageColor>
		</gridtile>
		<gridtile name="selected">
			<backgroundCenterColor>FFFFFF00</backgroundCenterColor>
			<backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
			<imageColor>FFFFFFFF</imageColor>
		</gridtile>
		<text name="gridtile">
			<color>80808080</color>
			<fontSize>0.016</fontSize>
			<size>1 0</size>
		</text>
		<text name="gridtile_selected">
			<color>FFFFFF00</color>
			<fontSize>0.035</fontSize>
			<size>1 0</size>
		</text>
		<image name="gridtile.favorite">
			<color>FFFFFF00</color>
			<visible>false</visible>
		</image>
		<ninepatch name="gridtile.background:selected">
			<color>FFFFFF00</color>
			<visible>false</visible>
			<animateColor>FFFFFF00</animateColor>
			<animateColorTime>0</animateColorTime>
		</ninepatch>
		<video name="md_video">
			<pos>0.17 0.725555555555556</pos>
			<maxSize>0.30 0.3833333333333333</maxSize>
			<origin>0.5 0.5</origin>
			<delay>1.0</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<snapshotSource>thumbnail</snapshotSource>
			<effect>none</effect>
			<zIndex>150</zIndex>
		</video>
		<image name="logo">
			<path>./../../_inc/logos/${system.theme}.png</path>
			<path>./../../_inc/logos/${system.theme}-${lang}.png</path>
			<pos>0.12 0.12</pos>
			<maxSize>0.200 0.126</maxSize>
			<origin>0.5 0.5</origin>
			<zIndex>150</zIndex>
		</image>
		<text name="logoText">
			<pos>0.784375 0.1527777777777778</pos>
			<size>0.15625 0.0555555555555556</size>
			<fontSize>0.0444444444444444</fontSize>
			<fontPath>./../../_inc/fonts/ubuntu_condensed.ttf</fontPath>
			<forceUppercase>true</forceUppercase>
			<color>555555</color>
		</text>

		<datetime name="md_releasedate">
			<origin>0.5 1</origin>
			<pos>0.0358 0.79</pos>
			<rotation>-90</rotation>
			<zIndex>140</zIndex>
		</datetime>
		<rating name="md_rating">
			<pos>0.051 0.92</pos>
			<origin>0.5 0</origin>
			<horizontalAlignment>left</horizontalAlignment>
			<rotation>0</rotation>
			<zIndex>150</zIndex>
		</rating>
		<image name="md_flag">
			<pos>0.0262 0.905</pos>
			<origin>0 0.5</origin>
			<color>FFFFFF90</color>
			<zIndex>150</zIndex>
		</image>
		<text name="md_players">
			<pos>0.124 0.935</pos>
			<zIndex>150</zIndex>
		</text>
		<image name="md_manual,md_nomanual">
			<pos>0.1475 0.935</pos>
			<zIndex>150</zIndex>
		</image>
		<image name="md_cheevos,md_notcheevos">
			<pos>0.1685 0.935</pos>
			<zIndex>150</zIndex>
		</image>
		<image name="md_savestate,md_nosavestate">
			<pos>0.19 0.935</pos>
			<x ifCheevos="false">0.1685</x>
			<y ifCheevos="false">0.935</y>
			<zIndex>150</zIndex>
		</image>

		<image name="md_hidden">
			<pos>0.213 0.935</pos>
			<zIndex>150</zIndex>
		</image>
		<image name="md_kidgame,md_notkidgame">
			<pos>0.235 0.935</pos>
			<zIndex>150</zIndex>
		</image>
	</customView>
</theme>